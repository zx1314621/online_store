<!DOCTYPE html>
<html>
  <head>
    <title>Assignment3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id = "banner"> Our product <%= image_tag("/./assets/logo.jpg", :size => "150x45")%></div>
<div id = "columns"> 
<div id = "side"> 
  <%= form_tag "/shopper/index", :method => 'get' do %>
 <%= text_field_tag :search, params[:search]%>
 <%= submit_tag "Search" %> 
<% end %>
  <div style=“color:yellow”>
<h1>ShoppingCart</h1>
</div> 
  <div id="cart">
    <% if @cart %>
         <%= render @cart %>
    <% else %>
         <p>shopping cart is empty</p>
    <% end %>
  </div>
  

  <% if session[:user_id] %>
 <ul>
 <li><%= link_to 'Orders', orders_path %></li>
 <li><%= link_to 'Products', products_path %></li>
 <li><%= link_to 'Users', users_path %></li>
 <li> <%= link_to 'Cart', carts_path %> </li>
 <li> <%= link_to 'Line_item', lineitems_path %> </li>
 <li> <a href="/shopper/index">Shopper</a> </li>
 </ul>
 <%= button_to 'Logout', logout_path, method: :delete
%>
 <%else%>
  <ul>
    <li> <a href="/shopper/index">Shopper</a> </li>
    <%= button_to 'Login', login_path, method: :get%>
  </ul>
 <% end %> 
</div>

<div id = "main">
<%= yield %>
</div>

</body>
</html>
